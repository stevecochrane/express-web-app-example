<h1 class="f2 mt0">Edit an Element</h1>

<form method="POST">
	<fieldset class="bn ma0 pa0">
		<div>
			<label for="name">Name</label>
			<input name="name" type="text" value="{{element.name}}" />
		</div>
		<div>
			<label for="description">Description</label>
			<textarea name="description">{{element.description}}</textarea>
		</div>
		<div>
			<input class="input-reset bn bg-blue hover-bg-dark-blue bg-animate ph4 pv3 white dib br2 pointer" type="submit" value="Submit" />
			<a class="no-underline bg-light-silver hover-bg-silver bg-animate ph4 pv3 white dib br2" href="/">Cancel</a>
		</div>
	</fieldset>
</form>
